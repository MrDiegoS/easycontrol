
@{
    ViewBag.Title = "Usuário";
}

@Scripts.Render("~/bundles/usuario")
@RenderPage("~/Areas/Admin/Views/Shared/_Header.cshtml")

<br />
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalAlterar" onclick="verificaAcao()">
    Adicionar Usuário
</button>
<br />
<br />

<div>
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">User</th>
                <th scope="col">E-mail</th>
                <th scope="col">Admin</th>
                <th scope="col">Data do Cadastro</th>
                <th colspan="2">Ações</th>
            </tr>
        </thead>
        <tbody id="userBody"></tbody>
    </table>
</div>

<!-- Modal para alterar o fator calculo -->
<div class="modal fade" id="modalAlterar" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitulo"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div>
                    <input type="number" id="userID" value="" hidden />

                    <div class="container">
                        <div class="row">
                            <div class="col">
                                <label>Nome</label>
                            </div>
                            <div class="col">
                                <input type="text" id="userNome" value="" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label>User</label>
                            </div>
                            <div class="col">
                                <input type="text" id="user" value="" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label>E-mail</label>
                            </div>
                            <div class="col">
                                <input type="text" id="email" value="" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label>Perfil</label>
                            </div>
                            <div class="col">
                                <select id="perfil">
                                    <option selected>Selecione</option>
                                    <option value="0">Cliente</option>
                                    <option value="1">Administrador</option>
                                </select>
                            </div>
                        </div>
                        <div id="divSenha">
                            <label id="senhaDiver" hidden>As senhas não são iguais</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
                        </div>
                        <div class="col">
                            <button type="button" class="btn btn-outline-primary" onclick="verificaAcao()" id="salvarEditar"></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
