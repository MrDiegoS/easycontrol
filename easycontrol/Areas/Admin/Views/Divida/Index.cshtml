
@{
    ViewBag.Title = "INADIMPLENCIA";
}

@Scripts.Render("~/bundles/divida")
@RenderPage("~/Areas/Admin/Views/Shared/_Header.cshtml")



<br />

<div class="form-group row">
    <label for="vlOriginal" class="col-2 col-form-label">Valor</label>
    <div class="col-10">
        <div class="input-group mb-1">
            <div class="input-group-prepend">
                <span class="input-group-text">R$</span>
                @*<span class="input-group-text">0.00</span>*@
            </div>
            <input type="number" id="vlOriginal" min="0" class="form-control">
        </div>
    </div>
</div>

<div class="form-group row">
    <label for="dtVencimento" class="col-2 col-form-label">Data do Vencimento</label>
    <div class="col-10">
        <input class="form-control" type="date" id="dtVencimento">
    </div>
</div>

<div class="form-group row">
    <label for="example-date-input" class="col-2 col-form-label">Quantidade de Parcelas</label>
    <div class="col-10">
        <input type="number" id="qtdParcelas" min="0" class="form-control">
    </div>
</div>

<div class="form-group row">
    <input type="text" id="userID" hidden disabled class="form-control">
    <label for="selUser" class="col-2 col-form-label">Usuario</label>
    <div class="col-10">
        <div class="input-group mb-2">
            <input type="text" id="buscaUser" placeholder="Digite o User" class="form-control">
            <div class="input-group-prepend">
                <span class="input-group-text" onclick="buscarUser()">
                    <img src="~/Content/assests/Images/Icon/lupa.ico" width="20" alt="buscar" />
                </span>
            </div>
        </div>
        <div class="input-group mb-2">
            <div class="input-group-prepend">
                <span class="input-group-text">Usuário selecionado</span>
            </div>
            <input type="text" id="selUser" placeholder="Nenhum usuário selecionado" disabled class="form-control">
        </div>
    </div>
</div>

<div class="form-group row">
    <label for="selFator" class="col-2 col-form-label">Fator Calculo</label>
    <div class="col-10">
        <select class="form-control" id="selFator"></select>
    </div>
</div>

<button type="button" class="btn btn-dark" onclick="calcularInadimplencia()">Salvar Inadimplência</button>